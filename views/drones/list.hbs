<h2>Available drones</h2>


<div class="container-grid">
    {{#each drone}}

    <div class="drone">

        <ul>

            <li>{{this.name}}</li>
            <li>{{this.propellers}}</li>
            <li>{{this.maxSpeed}}</li>
            <li><a href="/drones/{{this._id}}/edit">Update</a></li>
            <li><a href="/drones/{{this._id}}/delete">Delete</a></li>

            <form action="" method="post"></form>
        </ul>

    </div>



     {{/each}}
</div>